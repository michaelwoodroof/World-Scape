<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/theme_header">

        <ListPreference
            app:entries="@array/theme_choices"
            app:entryValues="@array/theme_values"
            app:iconSpaceReserved="false"
            app:key="theme"
            app:title="@string/theme_header"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory>
        <Preference
            app:iconSpaceReserved="false"
            app:key="version"
            app:summary="@string/version"
            app:title="@string/version_header" />
    </PreferenceCategory>

</PreferenceScreen>