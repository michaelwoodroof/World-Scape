<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michaelwoodroof.worldscape">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Default">
        <activity
            android:name=".CharacterDetailActivity"
            android:label="@string/title_activity_character_detail"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".CreateWorldActivity"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorldDetailActivity"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".CreateCharacterActivity"
            android:launchMode="singleTop"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>